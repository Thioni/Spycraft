{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
  <form method="post">
      {% if error %}
          <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}
  
      <div class="row justify-content-center">  
        <h1 class="col-xl-4 h3 mb-3 text-light">Veuillez vous connecter</h1>
      </div>

      <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-xl-4">
            <label for="inputEmail" class="text-light">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>
        <div class="col-12 col-md-6 col-xl-4">
            <label for="inputPassword" class="text-light">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
      </div>
  
      <input type="hidden" name="_csrf_token"
             value="{{ csrf_token('authenticate') }}"
      >
  
      <div class="row justify-content-center"> 
        <button class="col-4 col-sm-3 col-xl-2 btn btn-lg btn-primary mt-3" type="submit">
            Connexion
        </button>
      </div>

  </form>
</div>
{% endblock %}
