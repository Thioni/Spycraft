{% extends "base.html.twig" %}

{% block body %}

      {% if app.request.get("_route") == "create_contact" %}
        <section class="row m-0 justify-content-center">
          <div class="col-sm-3 col-lg-3 col-xl-3 text-light text-center">
            <h3>Créer un contact</h3>
          </div>
        </section>
      {% else %}
        <section class="row m-0 justify-content-center">
          <div class="col-sm-3 col-lg-3 col-xl-2 text-light text-center">
            <h3>Modifier le contact {{ contact.firstname }}</h3>
          </div>
        </section>
      {% endif %}

      {{ form_start(form) }}
        <section class="row m-0 justify-content-center text-light">
          <div class="col-sm-4 col-lg-3 col-xl-3 col-xxl-2 text-center">
            {{ form_row(form.first_name) }}
          </div>
          <div class="col-sm-4 col-lg-3 col-xl-3 col-xxl-2 text-center">
            {{ form_row(form.last_name) }}
          </div>
          <div class="col-sm-4 col-lg-3 col-xl-3 col-xxl-2 text-center">
            {{ form_row(form.codename) }}
          </div>
        </section>
        <section class="row m-0 justify-content-center text-light">
          <div class="col-sm-6 col-lg-4 col-xl-3 text-center">
            {{ form_row(form.birthdate) }}
          </div>
        </section>
        <section class="row m-0 justify-content-center text-light">
          <div class="col-sm-4 col-lg-3 col-xl-2 text-center">  
            {{ form_row(form.nationality) }}
          </div>
        </section>

        {% if app.request.get("_route") == "create_contact" %}
          <section class="row m-0 justify-content-center">
            <div class="col-sm-3 col-lg-3 col-xl-2 text-center"> 
              <input type="submit" value="créer" class="btn btn-success mt-3">
            </div>
          </section>
        {% else %}
          <section class="row m-0 justify-content-center">
            <div class="col-sm-3 col-lg-3 col-xl-2 text-center"> 
              <input type="submit" value="modifier" class="btn btn-warning mt-3">
            </div>
          </section>
        {% endif %}
      {{ form_end(form) }}

{% endblock %}