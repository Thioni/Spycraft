{% extends "base.html.twig" %}

{% block body %}

  <div class="text-danger text-center">
  {% for flashMessage in app.session.flashbag.get('error') %}
      {{ flashMessage }}
  {% endfor %}
  </div>

  <div class="container-fluid">

    <h1 class="text-center text-light">Liste des contacts</h1>
      <section class="d-flex flex-wrap justify-content-center mt-5">
        {% for contact in contacts %}
            <div class="card m-1 bg-secondary text-light" style="width: 25rem;">
              <div class="card-body">
                <h5 class="card-title text-center fw-bold">{{ contact.firstname|capitalize }} {{ contact.lastname|capitalize }}</h5>
                  <div class="row">
                    <div class="col-6 card-text text-dark fw-bold">DATE DE NAISSANCE:</div>
                    <div class="col-6 card-text">{{ contact.birthdate|date('d-m-Y') }}</div>
                  </div>
                  <div class="row">
                    <div class="col-6 card-text text-dark fw-bold">PAYS:</div>
                    <div class="col-6 card-text">{{ contact.nationality }}</div>
                  </div>
                  <div class="row">
                    <div class="col-6 card-text text-dark fw-bold mb-1">NOM DE CODE:</div>
                    <div class="col-6 card-text mb-1">{{ contact.codename }}</div>
                  </div>
              </div>
              <div class="row justify-content-around">
                <a href="/update-contact/{{ contact.id }}" class="col-3 btn btn-warning mb-2">Modifier</a>
                <a href="/delete-contact/{{ contact.id }}" class="col-3 btn btn-danger mb-2">Supprimer</a>
              </div>
            </div>
        {% endfor %}
      </section>

    <div class="row justify-content-center">
      <a href="/" class="col-2 col-md-1 btn btn-success mt-3 mb-5">Retour</a>
    </div>

  </div>
{% endblock %}