{% extends "base.html.twig" %}

{% block body %}

      {% if app.request.get("_route") == "create_agent" %}
        <section class="row m-0 justify-content-center">
          <div class="col-sm-3 col-lg-3 col-xl-3 text-center">
            <h3>Créer un agent</h3>
          </div>
        </section>
      {% else %}
        <section class="row m-0 justify-content-center">
          <div class="col-sm-3 col-lg-3 col-xl-2 text-center">
            <h3>Modifier l'agent {{ agent.firstname }}</h3>
          </div>
        </section>
      {% endif %}

      {{ form_start(form) }}
        <section class="row m-0 justify-content-center">
          <div class="mt-1 col-sm-4 col-lg-3 col-xl-3 col-xxl-2 text-center text-light">
            {{ form_row(form.first_name) }}
          </div>
          <div class="mt-1 col-sm-4 col-lg-3 col-xl-3 col-xxl-2 text-center text-light">
            {{ form_row(form.last_name) }}
          </div>
          <div class="mt-1 col-sm-4 col-lg-3 col-xl-3 col-xxl-2 text-center text-light">
            {{ form_row(form.code_agent) }}
          </div>
        </section>
        <section class="mt-1 row m-0 justify-content-center">
          <div class="col-sm-6 col-lg-4 col-xl-3 text-center text-light">
            {{ form_row(form.birthdate) }}
          </div>
        </section>
        <section class="row m-0 justify-content-center">
          <div class="col-sm-4 col-lg-3 col-xl-2 text-center text-light">  
            {{ form_row(form.nationality) }}
          </div>
        </section>
        <section class="row m-0 justify-content-center">
          <div class="col-8 col-sm-6 col-xxl-8 bg-light text-center rounded bg-dark text-light"> 
            {{ form_row(form.skill, {
              label_attr: {
                class: 'checkbox-inline'
              }
            }) }}
          </div>
        </section>

        {% if app.request.get("_route") == "create_agent" %}
          <section class="row m-0 justify-content-center">
            <div class="col-sm-3 col-lg-3 col-xl-2 text-center"> 
              <input type="submit" value="créer" class="btn btn-success mt-3">
            </div>
          </section>
        {% else %}
          <section class="row m-0 justify-content-center">
            <div class="col-sm-3 col-lg-3 col-xl-2 text-center"> 
              <input type="submit" value="modifier" class="btn btn-warning mt-3">
            </div>
          </section>
        {% endif %}
      {{ form_end(form) }}

{% endblock %}